<% if signed_in? %>
  Signed in as: <%= current_user.email %>
  <%= button_to 'Sign out', sign_out_path, method: :delete %>
<% else %>
  <%= link_to 'Sign in', sign_in_path %>
<% end %>

<div id="flash">
  <% flash.each do |key, value| %>
    <div class="flash <%= key %>"><%= value %></div>
  <% end %>
</div>
<div class="center jumbotron">
	<h1>WELCOME HOME</h1>
	<h3>Rent unique places to stay from local hosts in 190+ countries.</h3>
	<%= link_to "How it Works", '#', class: "btn btn-lg btn-primary" %>
</div>
<div class="searchbar-section">
	<div class=" searchbar">
		<%= form_tag listings_path, class:"form-inline", method: :get do %>
		<div class="form-group">
			<%= text_field_tag :query, params[:query], class: "form-control", placeholder: "Where do you want to go?" %>
			<%= submit_tag "Search", class:"btn btn-primary" %>
			<% if params[:query].present? %>
				<%= link_to "clear", listings_path %>
			<% end %>
		</div>
		<% end %>
	</div>
</div>
