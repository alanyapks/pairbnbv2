<h1>Show listing</h1>
<div class="row">
	<div class ="col-md-3 space-sm-3">
	<button type="button" class="btn btn-secondary"><%= link_to 'Create Listing', new_listing_path %></button>
	</div>
	<div class="col-md-9">
		<div>
			<% @listings.each do |listing|%>
				<div class="listing-tab row">
					<div class="col-md-4">
						<div class="listing-photo"> </div>
					</div>
					<div class="col-md-7">
						<h4><%=listing.name%></h4>
						<p><%=listing.description%></p>
					</div>
					<div class="col-md-1">
						<%= link_to "View", listing_path(listing) %>
					</div>
				</div>
			<% end %>
		</div>
	</div>
</div>